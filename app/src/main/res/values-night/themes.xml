<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MentorAndroidTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/darkBlue_100</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="backgroud">
        <item name="android:background">@color/darkBlue_100</item>
    </style>

    <style name="optionsMenuProfile">
        <item name="android:background">@color/darkBlue</item>
    </style>

    <style name="editProfileButtonText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="editProfileButtonLayout">
        <item name="android:background">@drawable/outline_gray_button</item>
    </style>

    <style name="helpingText">
        <item name="android:textColor">@color/gray </item>
    </style>

</resources>