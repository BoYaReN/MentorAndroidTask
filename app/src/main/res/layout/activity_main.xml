<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroud"
    style="@style/backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:text="@string/setting"
        android:textColor="@color/white_100"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/backgroud"
        app:layout_constraintTop_toTopOf="@id/backgroud" />

    <LinearLayout
        android:id="@+id/avatarImageLinearLayout"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="71dp"
        app:layout_constraintLeft_toLeftOf="@id/backgroud"
        app:layout_constraintRight_toRightOf="@id/backgroud"
        app:layout_constraintTop_toTopOf="@id/backgroud">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatarImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            app:shapeAppearanceOverlay="@style/circular"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Bohdan Yaremchak"
        android:textColor="@color/white_100"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/backgroud"
        app:layout_constraintRight_toRightOf="@id/backgroud"
        app:layout_constraintTop_toBottomOf="@id/avatarImageLinearLayout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/careerTextView"
        style="@style/profileSmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Android developer"
        app:layout_constraintLeft_toLeftOf="@dimen/centrality"
        app:layout_constraintRight_toRightOf="@dimen/centrality"
        app:layout_constraintTop_toBottomOf="@id/nameTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/homeAddressTextView"
        style="@style/profileSmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Home address"
        app:layout_constraintLeft_toLeftOf="@dimen/centrality"
        app:layout_constraintRight_toRightOf="@dimen/centrality"
        app:layout_constraintTop_toBottomOf="@id/careerTextView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalCenterGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/verticalCenterGuideLine"
        app:layout_constraintBottom_toBottomOf="@id/backgroud"
        style="@style/optionsMenuProfile"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/helpingTextView"
        app:layout_constraintStart_toStartOf="@id/backgroud"
        app:layout_constraintEnd_toEndOf="@id/backgroud"
        android:layout_marginBottom="61dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/facebookImageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/facebook_ic"
            android:layout_marginEnd="32dp"
            style="@style/socialNetworksImageButton"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/linkedinImageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/linkedin_ic"
            style="@style/socialNetworksImageButton"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/vkImageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/vk_ic"
            android:layout_marginStart="32dp"
            style="@style/socialNetworksImageButton"/>
    </LinearLayout>




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/helpingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/editProfileButtonLineralLayout"
        app:layout_constraintStart_toStartOf="@id/backgroud"
        app:layout_constraintEnd_toEndOf="@id/backgroud"
        android:text="@string/helpingText"
        android:layout_marginBottom="10dp"
        style = "@style/helpingText"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/editProfileButtonLineralLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/contactsViewButtonLineralLayout"
        android:background="@drawable/outline_button">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00000000"
            android:text="@string/editProfileButton"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAllCaps="false" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/contactsViewButtonLineralLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@id/backgroud"
        app:layout_constraintStart_toStartOf="@id/backgroud"
        app:layout_constraintEnd_toEndOf="@id/backgroud"
        android:layout_marginBottom="16dp"
        android:background="@drawable/contacts_view_button">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactsViewButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#0000"
            android:text="@string/contactsButtonText" />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>