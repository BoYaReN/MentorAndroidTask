<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MentorAndroidTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="buttons">
        <item name="cornerSize">5%</item>
    </style>

    <style name="profileSmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="profileButton">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>


    <style name="background">
        <item name="android:background">@color/darkBlue</item>
    </style>

    <style name="optionsMenuProfile">
        <item name="android:background">@color/white</item>
    </style>

    <style name="editProfileButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/outline_button</item>
    </style>

    <style name="helpingText">
        <item name="android:textColor">@color/darkBlue </item>
    </style>

    <style name="socialNetworksImageButton">
        <item name="backgroundTint">#00000000</item>
    </style>


    <style name="inputEditTextLayout">
        <item name="boxStrokeColor">@color/white_main</item>
        <item name="hintTextColor">@color/white_main</item>
        <item name="android:textColorHint">@color/white_main</item>
        <item name="errorTextColor">@color/login_error</item>
    </style>
</resources>